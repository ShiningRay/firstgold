<h1>Listing formulas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Input</th>
    <th>Output</th>
  </tr>

<% @formulas.each do |formula| %>
  <tr>
    <td><%=h formula.name %></td>
    <td><%=h formula.description %></td>
    <td><%=h formula.input %></td>
    <td><%=h formula.output %></td>
    <td><%= link_to 'Show', formula %></td>
    <td><%= link_to 'Edit', edit_formula_path(formula) %></td>
    <td><%= link_to 'Destroy', formula, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Apply', apply_formula_path(formula) %></td>
  </tr>
<% end %>
</table>

