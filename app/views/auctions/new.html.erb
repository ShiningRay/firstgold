<h1>New auction</h1>

<% form_for(@auction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :item_type %><br />
    <%= f.select :item_type, ['Item'] %>
  </p>
  <p>
    <%= f.label :item_id %>
    <%= f.collection_select :item_id, current_character.items, :id, :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :buyout_price %><br />
    <%= f.text_field :buyout_price %>
  </p>
  <p>
    <%= f.label :expiration %><br />
    <%= f.datetime_select :expiration %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', auctions_path %>