<h1>Listing auctions</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>Upset price</th>
    <th>Increment</th>
    <th>Status</th>
    <th>Expiration</th>
  </tr>

<% @auctions.each do |auction| %>
  <tr>
    <td><%=render :partial => auction.item %></td>
    <td><%=h auction.description %></td>
    <td><%=h auction.upset_price %></td>
    <td><%=h auction.status %></td>
    <td><%=h auction.expiration %></td>
    <td><%= link_to 'Show', auction %></td>
    <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
    <td><%= link_to 'Destroy', auction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New auction', new_auction_path %>