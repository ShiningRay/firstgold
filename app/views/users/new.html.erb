<% title t("Sign_up_as_a_new_user") %>
<h1><%=t("Sign_up_as_a_new_user") %></h1>
<% @user.password = @user.password_confirmation = nil %>

<%# error_messages_for :user %>
<%= form_for :user, :url => users_path do |f| -%>
<p><%= label_tag('login',t("Login")) %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag('email',t("Email")) %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag('password',t("Password")) %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', t('Confirm_Password') %><br/>
<%= f.password_field :password_confirmation %></p>

<p style="clear:left"><%= submit_tag t('Sign_up') %></p>
<% end -%>