<% title t("Administration") %>
<% form_tag params, {:method => :get} do %>
  <%=text_field_tag :q, params[:q] %><%= submit_tag 'Search' %>
<% end %>
<table>
  <% for u in @users %>
    <tr>
      <td><%= link_to u.login, edit_admin_user_path(u) %></td>
      <td><%= u.roles %></td>
      <td><%= t(u.state, :scope => 'users.states')%></td>
      <td><%= link_to t('Delete'), admin_user_path(u), :method => :delete, :confirm => 'are you sure?' %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @users %>