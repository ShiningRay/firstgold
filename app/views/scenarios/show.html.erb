<%= link_to 'Back', scenarios_path %>

<h1><%=h @scenario.name %></h1>
<p><%=h @scenario.description%></p>
<p><%= image_tag @scenario.background.url(:medium) %></p>
<% if @scenario.owner %>
<p>Owner:<%=@scenario.owner.try(:name)%></p>
<%= link_to 'Sell it', sell_scenario_path(@scenario) if @scenario.owner == current_character %>
<%= image_tag "scenario/#{@scenario.background}" %>
<% else %>
No Owner now. <%= link_to 'Buy it now', buy_scenario_path(@scenario) %>
<% end %>

<h3>Underlings</h3>
<ul>
<% @scenario.npcs.each do |u|  %>
<li><%= link_to u.npc.name, u.npc %> X
<%= u.count %></li>
<% end %>
</ul>
<p><%= link_to 'Add a underling', new_scenario_underling_path(@scenario) %></p>
<% if is_admin? %>
<%= link_to 'Edit', edit_scenario_path(@scenario) %>
<% end %>


<%= link_to 'Back', scenarios_path %>
