<% form_for(form, :html => { :multipart => true })  do |f| %>
  <%= f.error_messages %>
<p>
  <%= f.label :x %><%= f.text_field :x %><br />
  <%= f.label :y %><%= f.text_field :y %>
</p>
<p>
  <%= f.label :owner_id %><br/>
  <%= f.text_field :owner_id %>
</p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :background %><br />
    <%= f.file_field :background %>
  </p>
  <p>
    <%= f.submit form.new_record? ? "Create" : "Update" %>
  </p>
<% end %>
