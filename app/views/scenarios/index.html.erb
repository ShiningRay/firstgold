<h1>Listing scenarios</h1>

<table cellpadding="0" cellspacing="0">
<% for y in 0...16 %>
  <tr>
<% for x in 0...16 %>
    <td id="<%= "#{x}-#{y}" %>" style="margin:0;padding:0;width:16px;height:16px;border: 1px solid #000">
      <% i = (y << 4) + x %>
      <% if @scenarios[i] %>
      <%= link_to image_tag( @scenarios[i].background.url(:thumb) ), scenario_path(@scenarios[i])  %>
      <% else %>
      <%= link_to 'buy', buy_scenario_path("#{x}-#{y}"), :method => :post %>
      <% end %>
    </td>
<% end %>
    </tr>
<% end %>
</table>

<br />
