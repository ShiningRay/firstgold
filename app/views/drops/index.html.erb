<h1>Listing drops</h1>

<table>
  <tr>
    <th>Npc</th>
    <th>Item template</th>
    <th>Quantity</th>
    <th>Probability</th>
  </tr>

<% @drops.each do |drop| %>
  <tr>
    <td><%=h drop.npc_id %></td>
    <td><%=h drop.item_template_id %></td>
    <td><%=h drop.quantity %></td>
    <td><%=h drop.probability %></td>
    <td><%= link_to 'Show', drop %></td>
    <td><%= link_to 'Edit', edit_drop_path(drop) %></td>
    <td><%= link_to 'Destroy', drop, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New drop', new_drop_path %>