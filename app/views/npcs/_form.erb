<% form_for(form) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <% for attr in Stats::BaseFields + [:hp, :mp] %>
  <p>
    <%= f.label attr %><br/>
    <%= f.text_field attr %>
  </p>
  <% end %>
  <p>
    <%= f.submit form.new_record? ? "Create" : "Update" %>
  </p>
<% end %>