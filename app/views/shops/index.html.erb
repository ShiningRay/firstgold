<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%=link_to_remote shop.name, :method => :get, :update =>"shop-#{shop.id}", :url => shop_path(shop)  %></td>
    <td><%=link_to shop.npc.name, shop.npc if shop.npc_id %></td>
    <% if is_admin? %>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
  <tr>
    <td id="shop-<%=shop.id%>"></td>
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New shop', new_shop_path %>