<h1><%= @shop.new_record? ? 'Creating':'Editing' %>  shop</h1>

<% form_for(@shop) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :npc_id %><br />
    <%= f.text_field :npc_id %>
  </p>
  <p>
    <%= f.submit @shop.new_record? ? 'Create' : 'Update' %>
  </p>
<% end %>